<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_selected="true"
        android:state_pressed="true"
        android:alpha="@dimen/creator_inspiration_hub_pill_alpha">
        <shape>
            <solid android:color="@color/igds_bio_pill_active_background"/>
            <corners android:radius="@dimen/abc_button_padding_horizontal_material"/>
        </shape>
    </item>
    <item
        android:state_selected="false"
        android:state_pressed="true"
        android:alpha="@dimen/creator_inspiration_hub_pill_alpha">
        <shape>
            <solid android:color="@color/context_line_color"/>
            <corners android:radius="@dimen/abc_button_padding_horizontal_material"/>
        </shape>
    </item>
    <item
        android:state_selected="true"
        android:state_pressed="false">
        <shape>
            <solid android:color="@color/igds_bio_pill_active_background"/>
            <corners android:radius="@dimen/abc_button_padding_horizontal_material"/>
        </shape>
    </item>
    <item
        android:state_selected="false"
        android:state_pressed="false">
        <shape>
            <solid android:color="@color/context_line_color"/>
            <corners android:radius="@dimen/abc_button_padding_horizontal_material"/>
        </shape>
    </item>
</selector>
