<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="?attr/igds_color_highlight_background"/>
            <corners
                android:topLeftRadius="@dimen/abc_action_bar_elevation_material"
                android:topRightRadius="@dimen/abc_action_bar_elevation_material"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="?attr/igds_color_primary_background"/>
            <corners
                android:topLeftRadius="@dimen/abc_action_bar_elevation_material"
                android:topRightRadius="@dimen/abc_action_bar_elevation_material"/>
        </shape>
    </item>
</selector>
