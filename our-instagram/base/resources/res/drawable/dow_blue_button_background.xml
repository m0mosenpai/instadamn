<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="?attr/igds_color_highlight_background"/>
            <corners android:radius="@dimen/abc_button_padding_horizontal_material"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="?attr/igds_color_selected_text_background"/>
            <corners android:radius="@dimen/abc_button_padding_horizontal_material"/>
            <stroke
                android:width="1dp"
                android:color="?attr/igds_color_transparent"/>
        </shape>
    </item>
</selector>
