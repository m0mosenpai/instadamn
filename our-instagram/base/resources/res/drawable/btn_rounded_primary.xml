<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="?attr/sc_accent_deemphasized"/>
            <corners android:radius="?attr/sc_primary_button_corner_radius"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="?attr/sc_accent_deemphasized"/>
            <corners android:radius="?attr/sc_primary_button_corner_radius"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="?attr/sc_primary_button_background"/>
            <corners android:radius="?attr/sc_primary_button_corner_radius"/>
        </shape>
    </item>
</selector>
