<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_enabled="true"
        android:state_checked="true">
        <bitmap
            android:src="@drawable/radio_button_checked"
            android:tint="@color/prism_lock_icon"/>
    </item>
    <item
        android:state_enabled="false"
        android:state_checked="true">
        <bitmap
            android:src="@drawable/radio_button_checked"
            android:tint="@color/checkbox_disabled_tint"/>
    </item>
    <item
        android:state_enabled="true"
        android:state_checked="false">
        <bitmap
            android:src="@drawable/radio_button_unchecked"
            android:tint="@color/prism_enabled_background_off_ax_fix"/>
    </item>
    <item
        android:state_enabled="false"
        android:state_checked="false">
        <bitmap
            android:src="@drawable/radio_button_unchecked"
            android:tint="@color/checkbox_disabled_tint"/>
    </item>
</selector>
