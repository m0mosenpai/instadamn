<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <com.instagram.common.ui.base.IgView
        android:id="@+id/radio_icon"
        android:background="@drawable/radio_icon"
        android:duplicateParentState="true"
        android:layout_width="22dp"
        android:layout_height="22dp"/>
    <com.instagram.common.ui.base.IgLinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingStart="@dimen/abc_edit_text_inset_top_material"
        android:paddingEnd="@dimen/abc_edit_text_inset_top_material">
        <com.instagram.common.ui.base.IgTextView
            android:textSize="18sp"
            android:ellipsize="end"
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"/>
        <com.instagram.common.ui.base.IgTextView
            android:textSize="14sp"
            android:textColor="?attr/igds_color_secondary_text"
            android:ellipsize="end"
            android:id="@+id/subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"/>
    </com.instagram.common.ui.base.IgLinearLayout>
    <com.instagram.common.ui.base.IgButton
        android:textSize="14sp"
        android:textStyle="bold"
        android:id="@+id/extra_btn"
        android:background="@drawable/igds_button_background"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"/>
</merge>
