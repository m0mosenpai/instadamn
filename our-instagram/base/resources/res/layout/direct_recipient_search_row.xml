<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="horizontal"
    android:id="@+id/direct_recipient_search_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:paddingStart="10dp"
    android:paddingEnd="16dp"
    android:paddingVertical="10dp">
    <ImageView
        android:layout_gravity="center_vertical"
        android:id="@+id/profile_picture"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:foreground="@drawable/appwidget_round_outline"
        android:scaleType="centerCrop"
        android:layout_marginStart="8dp"/>
    <RelativeLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/group_picture"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp">
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/back_picture"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"/>
        <ImageView
            android:id="@+id/front_picture"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"/>
    </RelativeLayout>
    <LinearLayout
        android:gravity="start|center_vertical"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginHorizontal="15dp">
        <TextView
            android:textSize="@dimen/abc_text_size_menu_header_material"
            android:textColor="?attr/igds_color_primary_text"
            android:ellipsize="end"
            android:layout_gravity="center_vertical"
            android:id="@+id/fullname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"/>
        <TextView
            android:textSize="@dimen/abc_text_size_menu_header_material"
            android:textColor="?attr/igds_color_secondary_text"
            android:ellipsize="end"
            android:layout_gravity="center_vertical"
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"/>
    </LinearLayout>
    <ImageView
        android:layout_gravity="center_vertical"
        android:id="@+id/select_chat_indicator"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/appwidget_check_outline_16"/>
</LinearLayout>
