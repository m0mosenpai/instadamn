<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="?attr/igds_color_elevated_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_gravity="center_vertical"
        android:id="@+id/exit_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/direct_widget_x_outline_44"
        android:tint="?attr/igds_color_primary_icon"
        android:layout_marginHorizontal="8dp"/>
    <TextView
        android:textSize="@dimen/backup_codes_text_size"
        android:textStyle="bold"
        android:textColor="?attr/igds_color_primary_icon"
        android:id="@+id/header_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="@string/res_0x7f130147_name_removed"
        android:layout_marginVertical="12dp"/>
</LinearLayout>
