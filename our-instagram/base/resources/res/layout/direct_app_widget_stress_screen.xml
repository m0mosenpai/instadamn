<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:background="@drawable/appwidget_rounded_corner"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="@dimen/auth_title_text_size"
        android:textStyle="bold"
        android:textColor="?attr/igds_color_primary_text"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="15dp"/>
    <TextView
        android:textSize="@dimen/auth_title_text_size"
        android:textColor="@color/grey_5"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:textAlignment="center"
        android:layout_marginHorizontal="15dp"/>
    <Button
        android:textSize="@dimen/auth_title_text_size"
        android:textColor="@color/design_dark_default_color_on_background"
        android:id="@+id/go_to_ig_button"
        android:background="@drawable/direct_widget_button_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:text="@string/res_0x7f130089_name_removed"
        android:textAlignment="center"
        android:layout_marginHorizontal="16dp"
        android:paddingVertical="5dp"/>
</LinearLayout>
