<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/view_container"
    android:background="@drawable/appwidget_rounded_corner"
    android:layout_width="match_parent"
    android:layout_height="155dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginHorizontal="16dp">
        <TextView
            android:textSize="@dimen/abc_text_size_menu_header_material"
            android:textStyle="bold"
            android:textColor="@color/direct_widget_primary_text"
            android:ellipsize="end"
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/res_0x7f130067_name_removed"
            android:maxLines="1"
            android:layout_alignParentLeft="true"/>
        <ImageView
            android:gravity="end"
            android:id="@+id/ig_icon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/instagram"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <GridView
        android:orientation="horizontal"
        android:id="@+id/profiles_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="4"/>
</LinearLayout>
